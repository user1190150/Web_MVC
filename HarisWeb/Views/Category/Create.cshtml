@model Category

<form method="post" class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Create Category</h2>
    </div>
    <div class="mb-3 row p-1">
        <!--While we'r using asp-for we dont even need the name for label, it will actualy
            get the name from the names Property in Category Model-->
        <label asp-for="Name" class="p-0"></label>
        <!--With asp-for we bind the Propertie in Category with the Input field-->
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0"></label>
        <input asp-for="DisplayOrder" class="form-control" />
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Create</button>
        </div>
        <div class="col-6 col-md-3">
            <!--Now we want a button that goes back to Category List and we do that with tag helpers-->
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to List
            </a>
        </div>
    </div>
    
    
</form>